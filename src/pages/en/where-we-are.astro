---
/**
 * @file en/where-we-are.astro
 * @author Lares Cohousing Dev Team
 * @date 2026-02-11
 * @description Location page (English). Shows address,
 *              directions, and embedded OpenStreetMap.
 *
 * @returns Rendered location page
 * @update 2026-02-11
 */

import BaseLayout from '@layouts/BaseLayout.astro';

const locale = 'en';
---

<BaseLayout
  title="Where We Are"
  description="Find out where Lares Cohousing is located."
  locale={locale}
  currentPath="location"
  pagePath="where-we-are"
>
  <section class="section">
    <div class="container">
      <h1 class="section__title">Where We Are</h1>

      <div class="grid grid--2">
        <div class="content">
          <!-- Address from Directus -->
        </div>
        <div>
          <iframe
            title="Lares Cohousing Map"
            width="100%"
            height="400"
            style="border:0;border-radius:var(--border-radius-md)"
            loading="lazy"
            src="https://www.openstreetmap.org/export/embed.html"
            allowfullscreen
          ></iframe>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
